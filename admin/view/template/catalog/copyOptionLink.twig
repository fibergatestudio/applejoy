				{% endif %}
				</div>
			</table>
			<div class="modal-footer">
				{% if data_copyOptionLink %}
					<button type="button" class="btn btn-primary" onclick="copy_data();" >{{ entry_save }}</button>
				{% endif %}
				<button type="button" class="btn btn-default" data-dismiss="modal">{{ entry_close }}</button>
			</div>
		</div>
	</div>
</form>

<script type="text/javascript">
	function copy_data() {
		if ({{ module_ProductOptionLink_on_off_save }}) {

			var number_error = new Array();

			(function copy_link (i) {
				 if (i < {{ option_row }}) {

					var newOptionLink = $('#linkcopy'+i+' :input').serialize();

					$.ajax({
						url:     'index.php?route=catalog/copyOptionLink/newOptionLink&user_token=' + getURLVar('user_token'),
						type:     'POST',
						data: newOptionLink,
						success: function() {
							copy_link(i+1);
						},
						error: function() {
							number_error[i] = document.getElementById('errorname'+i).textContent;
							copy_link(i+1);
						}
					})
				} else {
					if (number_error && number_error.length == 0) {
						alert('{{ entry_copy_data }}');
						$('#modal_copyOptionLink').modal('hide');
					} else {
						alert('{{ entry_copy_data_error }} ( '+number_error+' )');
						$('#modal_copyOptionLink').modal('hide');
					}
				}
			})(0);
		} else {
			$.ajax({
				url:     'index.php?route=catalog/copyOptionLink/newOptionLink&user_token=' + getURLVar('user_token'),
				type:     'POST',
				data: $("#"+'form_OptionLink').serialize(),
				success: function(response) {
					alert('{{ entry_copy_data }}');
					$('#modal_copyOptionLink').modal('hide');
				},
				error: function(response) {
					alert('{{ entry_copy_data_error }}');
				}
			});
		}
	}

	function del_name() {
		var selected_del = $('#selected_del input:checked' ).serializeArray();

		selected_del.forEach (function(option_value_row) {
			$('#link-option-value-row'+option_value_row['value']).remove();
		});

		$('#delete_all').tooltip('destroy');
	}
</script>