											{% for product_option_new1 in product_option_new.product_option_value %}

												<script>
													var quantity_link = $('input[name=\'product_option_link[{{ option_row }}][product_option_value][{{ option_value_row }}][quantity]\']').prop('value');

													if (quantity_link == {{ product_option_new1.quantity }}) {

														//Подсвечиваем совпадающую опцию
														document.getElementById('link-option-value-row{{ option_value_row }}').classList.add("danger", "alert-danger");

														//Выводим предупреждение в товаре создаваемой опции
														document.getElementById('copyOptionLink_warning_link{{ option_value_row }}').innerHTML='{{ entry_product_link_danger }}';

														//Меняем product_option_id на существующий
														$('input[name*=\'product_option_link[{{ option_row }}][product_option_id]\']').prop ('value', {{ product_option_new['product_option_id'] }});

