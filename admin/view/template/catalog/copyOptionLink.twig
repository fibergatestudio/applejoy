											<select name="product_option_link[{{ option_row }}][product_option_id]" class="form-control">
													<option value="">{{ text_new }}</option>

													{% for link_product_option_id in copyOptionLink_main.product_option %}
														{% if product_option.option_id == link_product_option_id.option_id %}
															<option selected value="{{ link_product_option_id.product_option_id }}">
																{{ text_join }}
															</option>
															<script>
																//Подсвечиваем главный товар
