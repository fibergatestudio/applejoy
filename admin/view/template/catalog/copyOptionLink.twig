										</td>

										<td id="copyOptionLink_warning_link{{ option_value_row }}" class="text-center"></td>

										<td>
											{{ product_main.product_name }}

											<input size="1" type="hidden" name="product_option_link[{{ option_row }}][product_option_value][{{ option_value_row }}][quantity]" value="{{ product_main.product_id }}" />
										</td>

										<td class="text-center">
											{{ product_main.option_value_id_name }}

											<input size="1" type="hidden" name="product_option_link[{{ option_row }}][product_option_value][{{ option_value_row }}][option_value_id]" value="{{ product_main.option_value_id }}" />
										</td>

										<td class="text-center">
											{% if copyOptionLink_main.subtract %}
												<input disabled type="checkbox" checked>
												<input type="hidden" type="checkbox" name="product_option_link[{{ option_row }}][product_option_value][{{ option_value_row }}][subtract]" checked value="{{ copyOptionLink_main.subtract }}" >
											{% else %}
												<input disabled type="checkbox" >
												<input type="hidden" type="checkbox" name="product_option_link[{{ option_row }}][product_option_value][{{ option_value_row }}][subtract]" value="" >
											{% endif %}
										</td>

										<td class="text-center">
											<select name="product_option_link[{{ option_row }}][product_option_value][{{ option_value_row }}][price_prefix]" class="form-control">
												{% if copyOptionLink_main.price_prefix == '1' %}
													<option value="0">{{ text_off }}</option>
													<option value="1" selected>{{ text_option }}</option>
													<option value="2">{{ text_product }}</option>
												{% elseif copyOptionLink_main.price_prefix == '2' %}
													<option value="0">{{ text_off }}</option>
													<option value="1">{{ text_option }}</option>
													<option value="2" selected>{{ text_product }}</option>
												{% else %}
													<option value="0" selected>{{ text_off }}</option>
													<option value="1">{{ text_option }}</option>
													<option value="2">{{ text_product }}</option>
												{% endif %}
											</select>
										</td>

										<input type="hidden" name="product_option_link[{{ option_row }}][product_option_value][{{ option_value_row }}][product_option_value_id]" value=" " />

										<input type="hidden" name="product_option_link[{{ option_row }}][product_option_value][{{ option_value_row }}][price]" value="{{ copyOptionLink_main.price }}"/>
										<input type="hidden" name="product_option_link[{{ option_row }}][product_option_value][{{ option_value_row }}][points_prefix]" value="{{ copyOptionLink_main.points_prefix }}"/>
										<input type="hidden" name="product_option_link[{{ option_row }}][product_option_value][{{ option_value_row }}][points]" value="{{ copyOptionLink_main.points }}"/>
										<input type="hidden" name="product_option_link[{{ option_row }}][product_option_value][{{ option_value_row }}][weight_prefix]" value="{{ copyOptionLink_main.weight_prefix }}"/>
										<input type="hidden" name="product_option_link[{{ option_row }}][product_option_value][{{ option_value_row }}][weight]" value="{{ copyOptionLink_main.weight }}"/>

										<td class="text-left"><button type="button" onclick="$(this).tooltip('destroy');$('#link-option-value-row{{ option_value_row }}').remove();" data-toggle="tooltip" title="{{ button_remove }}" class="btn btn-danger"><i class="fa fa-minus-circle"></i></button></td>
									</tr>
								{% elseif (copyOptionLink_links.quantity and (copyOptionLink_links.quantity == product_main.product_id)) %}
									<tr id="link-option-value-row{{ option_value_row }}">

										<td class="text-center" id="selected_del">
											<input type="checkbox" id="selected[{{ option_row }}][{{ option_value_row }}]" name="selected[{{ option_row }}]" value="{{ option_value_row }}"/>
										</td>

										<td id="copyOptionLink_warning_link{{ option_value_row }}" class="text-center"></td>

										<td>
											{{ copyOptionLink_main.product_name }}

											<input size="1" type="hidden" name="product_option_link[{{ option_row }}][product_option_value][{{ option_value_row }}][quantity]" value="{{ copyOptionLink_main.quantity }}" />
										</td>

										<td class="text-center">
											{{ copyOptionLink_main.option_name }}

											<input size="1" type="hidden" name="product_option_link[{{ option_row }}][product_option_value][{{ option_value_row }}][option_value_id]" value="{{ copyOptionLink_main.option_value_id }}" />
										</td>

										<td class="text-center">
											{% if copyOptionLink_main.subtract %}
												<input disabled type="checkbox" checked >
												<input type="hidden" type="checkbox" name="product_option_link[{{ option_row }}][product_option_value][{{ option_value_row }}][subtract]" checked value="{{ copyOptionLink_main.subtract }}" >
											{% else %}
												<input disabled type="checkbox" >
												<input type="hidden" type="checkbox" name="product_option_link[{{ option_row }}][product_option_value][{{ option_value_row }}][subtract]" value="" >
