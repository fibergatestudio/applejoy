									<li><a href="https://search.google.com/structured-data/testing-tool?hl=ru#url={{ link_main }}" target="_blank" title="{{ text_in_new_tab }}">{{ text_main_page }} <i class="fa fa-external-link" aria-hidden="true"></i></a></li>
									{% if link_category %}
