									<div class="col-sm-1" style="width:14.28%;"><div>{{ text_friday }}</div><div><input class="form-control" type="text" name="module_microdatapro_oh_5" value="{{ module_microdatapro_oh_5 }}" placeholder="10:00-20:00"></div></div>
