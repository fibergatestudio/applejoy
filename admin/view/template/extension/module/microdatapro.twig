											{% endfor %}
										</ul>
										<button id="clear_old" data-loading-text="{{ text_clear }} <i class='fa fa-spinner fa-spin'></i>" type="button" class="btn btn-primary btn-sm">{{ text_clear }}</button>
									</div>
									{{ text_cleared_info }}
								</div>
							{% endif %}
							{% if other_modules%}
