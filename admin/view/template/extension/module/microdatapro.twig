								<div class="mod_detail" style="display:none;">
									{{ text_not_other_modules_info }}
								</div>
							{% endif %}

							<h3 class="h3_more_info">4) <i style="color:#14628c;" class="fa fa-check-square-o" aria-hidden="true"></i> {{ text_google_check }}</h3>
