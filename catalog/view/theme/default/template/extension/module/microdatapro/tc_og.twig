{# microdatapro 7.3  #}
{% if twitter %}
<!--microdatapro {{ version }} twitter cards start -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:creator" content="{{ twitter_account }}" />
<meta property="twitter:site" content="{{ title }}" />
<meta property="twitter:title" content="{{ title }}" />
<meta property="twitter:description" content="{{ description }}" />
<meta property="twitter:image" content="{{ image }}" />
<meta property="twitter:image:alt" content="{{ title }}" />
<!--microdatapro {{ version }} twitter cards end -->
{% endif %}
{% if opengraph %}
<!--microdatapro {{ version }} open graph start -->
<meta property="og:locale" content="{{ locale }}">
<meta property="og:rich_attachment" content="true">
<meta property="og:site_name" content="{{ site_name }}">
<meta property="og:type" content="{{ og_type }}" />
<meta property="og:title" content="{{ title }}" />
<meta property="og:description" content="{{ description }}" />
<meta property="og:image" content="{{ image }}" />
<meta property="og:image:secure_url" content="{{ image }}" />
<meta property="og:image:width" content="1200">
<meta property="og:image:height" content="630">
{% if images %}
{% for image in images %}
<meta property="og:image" content="{{ image }}" />
<meta property="og:image:secure_url" content="{{ image }}" />
{% endfor %}
{% endif %}
<meta property="og:url" content="{{ url }}">
{% if contacts %}
<meta property="business:contact_data:street_address" content="{{ street_address }}" />
<meta property="business:contact_data:locality" content="{{ locality }}" />
<meta property="business:contact_data:postal_code" content="{{ postal_code }}" />
<meta property="business:contact_data:country_name" content="{{ country_name }}" />
<meta property="place:location:latitude" content="{{ latitude }}" />
<meta property="place:location:longitude" content="{{ longitude }}" />
<meta property="business:contact_data:email" content="{{ email }}"/>
{% if telephone %}
<meta property="business:contact_data:phone_number" content="{{ telephone }}"/>
{% endif %}
{% endif %}
{% if module_microdatapro_profile_id %}
<meta property="fb:profile_id" content="{{ module_microdatapro_profile_id }}">
{% endif %}
{% if product_page %}
<meta property="product:product_link" content="{{ url }}">
<meta property="product:brand" content="{{ product_manufacturer }}">
<meta property="product:category" content="{{ product_category }}">
<meta property="product:availability" content="{{ product_stock }}">
{% if age_group %}
<meta property="product:age_group" content="{{ age_group }}">
{% if age_group  ==  "adult" %}
<meta property="og:restrictions:age" content="18+">
{% endif %}
{% endif %}
<meta property="product:condition" content="new">
{% if ean%}
<meta property="product:ean" content="{{ ean }}">
{% endif %}
{% if isbn %}
<meta property="product:isbn" content="{{ isbn }}">
{% endif %}
{% if upc %}
<meta property="product:upc" content="{{ upc }}">
{% endif %}
{% if color %}
<meta property="product:color" content="{{ color }}">
{% endif %}
{% if material %}
<meta property="product:material" content="{{ material }}">
{% endif %}
{% if size %}
<meta property="product:size" content="{{ size }}">
{% endif %}
<meta property="product:target_gender" content="{{ target_gender }}">
{% if price %}
<meta property="product:price:amount" content="{{ price }}">
<meta property="product:price:currency" content="{{ currency }}">
{% endif %}
{% if special %}
<meta property="product:sale_price:amount" content="{{ special }}">
<meta property="product:sale_price:currency" content="{{ currency }}">
{% endif %}
{% if relateds %}
{% for related in relateds %}
<meta property="og:see_also" content="{{ related }}" />
{% endfor %}
{% endif %}
{% endif %}
<!--microdatapro {{ version }} open graph end -->
{% endif %}
