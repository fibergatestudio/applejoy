{% if reviews %}

   <ul class="list-feedback">
     {% for review in reviews %}
      <li class="item-feedback item-product">
         <div class="d-flex">
            <div class="wrapper-img"><img src="/catalog/view/theme/applejoy/template/html/images/photo-user.efc9c67a.svg" alt="photo-user" class="img-fluid"></div>
            <div class="header-feedback">
               <div class="stars">
                 {% for i in 1..5 %}
                 {% if review.rating < i %} <span class="icon icon-star-active"></span> {% else %} <span class="icon icon-star-not-active"></span> {% endif %}
                 {% endfor %}
                </div>
               <div class="d-flex justify-content-between"><span class="fw-700 user">{{ review.author }}</span> <span class="data-feedback">{{ review.date_added }}</span></div>
            </div>
         </div>
         <div class="feedback">
            <p>{{ review.text }}</p>
         </div>
      </li>
      {% endfor %}
   </ul>

{% else %}

<p>{{ text_no_reviews }}</p>

{% endif %}
