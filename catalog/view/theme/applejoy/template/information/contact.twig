{{ header }}
<div class="main-page">
   <nav aria-label="breadcrumb" class="block-breadcrumb">
      <ol class="breadcrumb container">
        {% for breadcrumb in breadcrumbs %}
        <li class="breadcrumb-item active"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ol>
   </nav>
   <section class="section-contact">
      <div class="container">
         <h1 class="title-section">{{ our_contacts }}</h1>
         <div class="block-contact">
            <div class="wrapper-image"><img src="catalog/view/theme/applejoy/template/html/images/contact.c38517e7.webp" alt="image-contact" class="image-contact img-fluid"></div>
            <div class="text-block">
               <p class="title-contact">{{ subheading_1 }}</p>
               <p class="title-contact">{{ subheading_2 }}</p>
               <p>{{ main_text_1 }}</p>
               <p>{{ main_text_2 }}</p>
               <ul class="address">
                  <li><span class="item-address">{{ text_address }}</span> <span><span class="title-contact d-lg-block">{{ address }}</span> <span>{{ comment_enter }}</span></span></li>
                  <li><span class="item-address">{{ text_open }}</span> <span class="title-contact">Пн. - Нд. {{ open }}</span></li>
                  <li><span class="item-address">{{ text_telephone }}</span> <span class="title-contact">{{ telephone }}</span></li>
               </ul>
               <ul class="list-icon">
                  <li><a class="icon icon-instagram" href="#"></a></li>
                  <li><a class="icon icon-facebook" href="#"></a></li>
                  <li><a class="icon icon-google" href="#"></a></li>
               </ul>
            </div>
         </div>
      </div>
   </section>
   <section class="section-map">
      <div class="container"><span class="title-section">{{ how_to_find_us }}</span></div>
      <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2540.8466813663813!2d30.518145316001846!3d50.443956395713315!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40d4ce56094d696b%3A0x2eec283b33169e54!2z0YPQuy4g0JrRgNC10YnQsNGC0LjQuiwgNDQsINCa0LjQtdCyLCAwMjAwMA!5e0!3m2!1sru!2sua!4v1619117146324!5m2!1sru!2sua" width="100%" height="470" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
   </section>
   {{ content_bottom }}
{{ footer }}
