{% if languages|length > 1 %}
<li class="dropdown">
  <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-language">
      <a class="dropdown-item lang icon" href="{{ redirect }}" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      {% for language in languages %}
      {% if language.code == code %}
      {{ language.name }}
      {% endif %}
      {% endfor %}
    </a>
      <div class="dropdown-menu">
      <ul>
        {% for language in languages %}
        <li>
          {% if language.code != code %}
          <li><a class="dropdown-item language-select"  {% if language.code == 'ru-ru' %} href="/ru{{ cur_url }}" {% else %} href="{{ cur_url }}" {% endif %} name="{{ language.code }}">
             {{ language.name }}
          </a></li>
          {% endif %}
        </li>
        {% endfor %}
      </ul>
    </div>
    <input type="hidden" name="code" value="" />
    <input type="hidden" name="redirect" value="{{ redirect }}" />
  </form>
</li>
{% endif %}